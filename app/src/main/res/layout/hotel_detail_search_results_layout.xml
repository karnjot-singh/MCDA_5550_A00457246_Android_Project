<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:padding="10dp"
    android:background="@drawable/hotel_details_layout_border"
    >

    <TextView
        android:id="@+id/hotel_name_search_results_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="HOTEL NAME"
        android:textSize="25dp"
        android:padding="5dp"
        android:fontFamily="@string/app_font_family"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/hotel_price_search_results_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="HOTEL PRICE"
        android:textSize="20dp"
        android:padding="5dp"
        android:fontFamily="@string/app_font_family"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/hotel_availability_search_results_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hotel_name_search_results_text_view"
        app:layout_constraintStart_toStartOf="@id/hotel_name_search_results_text_view"
        android:text="HOTEL AVAILABILITY"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:fontFamily="@string/app_font_family"
        android:layout_marginTop="25dp"
        />
    
    <Button
        android:id="@+id/book_hotel_search_results_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/hotel_availability_search_results_text_view"
        app:layout_constraintEnd_toEndOf="@id/hotel_price_search_results_text_view"
        android:text="@string/search_results_book_button_text"
        android:textColor="@color/white"
        android:background="@color/btn_blue"
        />

</androidx.constraintlayout.widget.ConstraintLayout>