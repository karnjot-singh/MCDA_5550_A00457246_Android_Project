<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape>
            <solid android:color="@color/btn_blue" />
            <stroke android:color="@color/search_form"/>
            <corners android:radius="2dp" />
            <padding android:bottom="8dp" android:top="8dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <stroke android:color="@color/search_form_light"/>
            <corners android:radius="2dp" />
            <stroke android:color="@color/search_form"/>
            <solid android:color="@color/search_form_medium" />
            <padding android:bottom="8dp" android:top="8dp" />
        </shape>
    </item>
</selector>